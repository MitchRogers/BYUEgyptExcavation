                      </div>
                      <div class="form-group form-check col-2">
                          <label class="form-check-label">
                              @Html.DisplayNameFor(model => model.ToothTaken) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <input class="form-check-input" asp-for="ToothTaken" />
