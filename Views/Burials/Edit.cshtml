                          <span asp-validation-for="HighPairNs" class="text-danger"></span>
                      </div>
                  </div>
                  <div class="row">
                      <div class="form-group col-4">
                          <label asp-for="BurialLocationEw" class="control-label">Burial Location EW</label>
                          <input asp-for="BurialLocationEw" class="form-control" placeholder="E / W" />
                          <span asp-validation-for="BurialLocationEw" class="text-danger"></span>
