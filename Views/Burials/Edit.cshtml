                  <div class="row">
                      <div class="form-group col-10 offset-1">
                          <label asp-for="SampleTakenNotes" class="control-label">Samples Taken Notes</label>
                          <textarea asp-for="SampleTakenNotes" class="form-control border border-secondary" placeholder="Click to add notes" rows="8"></textarea>
                          <span asp-validation-for="SampleTakenNotes" class="text-danger"></span>
                      </div>
                  </div>
              </fieldset>
