                          <span asp-validation-for="BurialSituationNotes" class="text-danger"></span>
                      </div>
                  </div>
                  <br /><br />
                  <div class="row">
                      <div class="form-group form-check col-2 offset-1">
                          <label class="form-check-label">
                              @Html.DisplayNameFor(model => model.TextileTaken) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <input class="form-check-input" asp-for="TextileTaken" />
                          </label>
                      </div>
                      <div class="form-group form-check col-3">
                          <label class="form-check-label">
                              @Html.DisplayNameFor(model => model.ArtifactFound) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <input class="form-check-input" asp-for="ArtifactFound" />
                          </label>
                      </div>
                  </div>
                  <div class="row">
                      <div class="form-group col-10 offset-1">
                          <label asp-for="ArtifactsTakenNotes" class="control-label">Artifact Notes</label>
                          <textarea asp-for="ArtifactsTakenNotes" class="form-control border border-secondary" placeholder="Click to add notes" rows="8"></textarea>
                          <span asp-validation-for="ArtifactsTakenNotes" class="text-danger"></span>
                      </div>
                  </div>
                  <br /><br />
                  <div class="row">
                      <div class="form-group form-check col-2 offset-1">
                          <label class="form-check-label">
                              @Html.DisplayNameFor(model => model.HairTaken) &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <input class="form-check-input" asp-for="HairTaken" />
                          </label>
                      </div>
                      <div class="form-group form-check col-3">
