                          <span asp-validation-for="EastToHead" class="text-danger"></span>
                      </div>
                      <div class="form-group col-5">
                          <label asp-for="EastToFeet" class="control-label">East to Feet</label>
                          <input asp-for="EastToFeet" class="form-control" placeholder="Distance in meters" />
                          <span asp-validation-for="EastToFeet" class="text-danger"></span>
