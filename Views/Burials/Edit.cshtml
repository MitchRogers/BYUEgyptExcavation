                              <option value="East">East</option>
                              <option value="West">West</option>
                          </select>
                          <span asp-validation-for="HeadDirection" class="text-danger"></span>
                      </div>
                  </div>
              </fieldset>
              <br />

              @*FIELDSET FOR OVERALL IMPRESSION INFORMATION*@
