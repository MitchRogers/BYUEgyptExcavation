@{
}
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
    
<div class="m-3">
    <div class="m-3">
        <h1 class="bg-primary text-white text-center p-1">All Roles</h1>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Home</a>
        <a asp-action="Create" class="btn btn-secondary">Create a Role</a>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Users</a>
    </div>

        @*table dynamically displaying all of the users and CRUD options*@
        <table class="table table-sm table-bordered table-bordered m-lg-3">
            <tr><th>ID</th><th>Name</th><th>Update</th><th>Delete</th></tr>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td><a class="btn btn-sm btn-outline-primary" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </table>
</div>
