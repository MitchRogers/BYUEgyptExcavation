@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BYU Egypt Excavation</title>
    <meta name="description" content="" />
    <meta name="author" content="" />
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/img/favicon.ico" />
    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.1/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic" rel="stylesheet" type="text/css" />
    <!-- Third party plugin CSS-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/lib/bootstrap1/css/styles.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation-->
    @if (SignInManager.IsSignedIn(User))
    {
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo-image" src="~/images/BYUExcavations Logo.Edit.png" />
                </a>
                <a class="navbar-brand js-scroll-trigger" asp-area="" asp-controller="Home" asp-action="Index">BYU Egypt Excavation Project</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarResponsive mainNav">
                    <ul class="navbar-nav ml-auto my-2 my-lg-0">
                        <li class="nav-item link-spacer" style="padding-top: 15px;">
                            <a class="nav-link text-dark js-scroll-trigger btn px-4 py-2" style="border: none; background: inherit;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item link-spacer" style="padding-top: 15px;">
                            <a class="nav-link text-dark js-scroll-trigger btn px-4 py-2" style="border: none; background: inherit;" asp-area="" asp-controller="Burials" asp-action="Index">Mummy List</a>
                        </li>
                        @*<li class="nav-item link-spacer">
                                <a class="nav-link text-dark js-scroll-trigger btn px-4 py-2" style="border: none; background: inherit;" asp-area="" asp-controller="Burials" asp-action="ResearchIndex">Research List</a>
                            </li>*@
                        <li class="nav-item link-spacer" style="padding-top: 15px;">
                            <a class="nav-link text-dark js-scroll-trigger btn px-4 py-2" style="border: none; background: inherit;" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item link-spacer" style="padding-top: 15px;">
                                <a class="nav-link text-dark js-scroll-trigger btn px-4 py-2" style="border: none; background: inherit;" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    }
    else
    {
        <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="logo-image" src="~/images/BYUExcavations Logo.Edit.png" />
                </a>
                <a class="navbar-brand js-scroll-trigger" asp-area="" asp-controller="Home" asp-action="Index">BYU Egypt Excavation Project</a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarResponsive mainNav">
                    <ul class="navbar-nav ml-auto my-2 my-lg-0">
                        <li class="nav-item link-spacer">
                            <a class="nav-link text-dark js-scroll-trigger btn px-4 py-2" style="border: none; background: inherit;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item link-spacer">
                            <a class="nav-link text-dark js-scroll-trigger btn px-4 py-2" style="border: none; background: inherit;" asp-area="" asp-controller="Burials" asp-action="Index">Mummy List</a>
                        </li>
                        @*<li class="nav-item link-spacer">
                                <a class="nav-link text-dark js-scroll-trigger btn px-4 py-2" style="border: none; background: inherit;" asp-area="" asp-controller="Burials" asp-action="ResearchIndex">Research List</a>
                            </li>*@
                        <li class="nav-item link-spacer">
                            <a class="nav-link text-dark js-scroll-trigger btn px-4 py-2" style="border: none; background: inherit;" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item link-spacer">
                                <a class="nav-link text-dark js-scroll-trigger btn px-4 py-2" style="border: none; background: inherit;" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                        }
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    }
    <!-- Masthead-->
    <!-- About-->
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Footer-->
    <footer class="bg-light py-5">
        <div class="container"><div class="small text-center text-muted">Copyright © 2021 - BYU Egypt Excavation Project</div></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Third party plugin JS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/lib/bootstrap1/js/scripts.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

