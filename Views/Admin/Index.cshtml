@{
}

@model IEnumerable<IdentityUser>

@*Show the admin portal*@

<div class="container">
    <br /><br /><br /><br />
    <div class="m-3">
        <div class="m-3">
            <h1 class="bg-primary text-white text-center p-1">All Users</h1>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Home</a>
            <a asp-controller="Role" asp-action="Index" class="btn btn-secondary">Roles</a>
        </div>

        <table class="table table-sm table-bordered m-lg-3">
            <tr><th>ID</th><th>Name</th><th>Email</th><th>Update</th><th>Delete</th></tr>
            @foreach (IdentityUser user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" asp-action="Update" asp-route-id="@user.Id">Update</a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

    